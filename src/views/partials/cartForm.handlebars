 <table class="table table-bordered">
    <thead>
        <tr>
            <th colspan="6" class="text-center bg-darkblue">Productos del Carrito {{cart_id}}</th>
            <input type="hidden" id="cart_id" value="{{cart_id}}"/>
        </tr>
    </thead>
    <thead class="table-primary">
        <tr>    
            <th>Codigo</th>
            <th>Titulo</th>
            <th>Descripcion</th>
            <th class="text-end">Precio</th>
            <th class="text-end">Cantidad</th>
            <th>Acci√≥n</th>
        </tr>
    </thead>
    <tbody>          
        {{#each cart.products}}                      
        <tr>
            <td class="align-middle">{{product.code}}</td>
            <td class="align-middle">{{product.title}}</td>
            <td class="align-middle">{{product.description}}</td>
            <td class="text-end align-middle">${{product.price}}</td>
            <td class="text-end align-middle">{{quantity}}</td>          
            <td class="align-middle text-center w-30">
                <div class="d-flex gap-2 justify-content-center">
                    <button class="btn btn-danger" onclick="deleteProductFromCart('{{product._id}}')" data-bs-toggle="tooltip" title="Eliminar producto">
                        <i class="bi bi-trash"></i> <!-- Icono del tacho de basura -->
                    </button>
                </div>
            </td>                                    
        </tr>                         
        {{/each}}
    </tbody>
</table>