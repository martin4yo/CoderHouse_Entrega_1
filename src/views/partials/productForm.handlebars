            <form id="productForm">
                <div class="mb-3">
                    <label for="title" class="form-label">Título</label>
                    <input type="text" class="form-control" id="title" value="{{product.title}}" placeholder="Ingrese el título" required
                    {{#if product.title}}disabled{{/if}}>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <textarea class="form-control" id="description" rows="3" placeholder="Ingrese la descripción" required
                    {{#if product.description}}disabled{{/if}}>{{product.description}}</textarea>
                </div>

                <div class="mb-3">
                    <label for="code" class="form-label">Código</label>
                    <input type="text" class="form-control" id="code" value="{{product.code}}" placeholder="Ingrese el código" required
                    {{#if product.code}}disabled{{/if}}>
                </div>

                <!-- Precio, Stock y Status en la misma fila -->
                <div class="row">
                    <div class="col-md-4">
                        <label for="price" class="form-label">Precio</label>
                        <input type="number" class="form-control" value="{{product.price}}" id="price" placeholder="Precio" required min="0" step="0.01"
                        {{#if product.price}}disabled{{/if}}>
                    </div>

                    <div class="col-md-4">
                        <label for="stock" class="form-label">Stock</label>
                        <input type="number" class="form-control" value="{{product.stock}}" id="stock" placeholder="Stock" required min="0"
                        {{#if product.stock}}disabled{{/if}}>
                    </div>

                    <div class="col-md-4">
                        <label for="status" class="form-label">Estado</label>
                        <select class="form-select" id="status" required>
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Categoría</label>
                    <input type="text" class="form-control" value="{{product.category}}" id="category" placeholder="Ingrese la categoría" required
                    {{#if product.category}}disabled{{/if}}>
                </div>

                <div class="mb-3">
                    <label for="thumbnails" class="form-label">Imagen (URL)</label>
                    <input type="url" class="form-control" id="thumbnails" value="{{product.thumbnails}}" placeholder="Ingrese la URL de la imagen"
                    {{#if product.code}}disabled{{/if}}>
                </div>

                {{#if product.code}}
                    <button type="button" class="btn btn-primary w-100" onclick="addProduct('{{product._id}}')">Agregar al carrito</button>
                {{else}}
                    <button type="submit" class="btn btn-primary w-100">Guardar Producto</button>
                {{/if}}
                
            </form>         
