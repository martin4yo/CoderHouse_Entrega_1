<div class="bottom-section box-shd">

        <div class="right-panel">
             <div class="col-md-4 bg-darkcyan text-white p-3 w-100">
                <h2 class="text-center">Carritos Activos</h2>

                <table class="table table-bordered">
                    <thead class="table-primary">
                        <tr>    
                            <th>Id</th>
                            <th>Accion</th>
                        </tr>
                    </thead>
                    <tbody>          
                        {{#each carts}}                      
                            <tr>
                                <td class="align-middle">
                                    <a href="/carts/?cart_id={{_id}}">{{_id}}</a>
                                </td>     
                                <td class="align-middle">
                                    {{#if (isEmptyArray products)}}
                                        <div class="d-flex gap-2 justify-content-center">
                                            <button class="btn btn-danger" onclick="deleteCart('{{_id}}')" data-bs-toggle="tooltip" title="Eliminar carrito">
                                                <i class="bi bi-trash"></i> <!-- Icono del tacho de basura -->
                                            </button>
                                        </div>
                                    {{/if}}
                                </td>                                          
                            </tr>                         
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

        <div class="left-panel product_list">

            {{> cartForm}}
           
        </div>
</div>
<div class="container w-100"></div>
</div>

<script src="/static/js/carts.js"></script>
<script src="/static/js/utils.js"></script>