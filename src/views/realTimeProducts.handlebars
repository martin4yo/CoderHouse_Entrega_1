<div class="container">

    <div class="content product_list">
    </div>

    <div class="sidebar">
        <div class="col-md-4 bg-success text-white p-3 w-100">
            <h2 class="text-center">Agregar Producto</h2>

            <form id="productForm">
                <div class="mb-3">
                    <label for="title" class="form-label">Título</label>
                    <input type="text" class="form-control" id="title" placeholder="Ingrese el título" required>
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <textarea class="form-control" id="description" rows="3" placeholder="Ingrese la descripción" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="code" class="form-label">Código</label>
                    <input type="text" class="form-control" id="code" placeholder="Ingrese el código" required>
                </div>

                <div class="mb-3">
                    <label for="price" class="form-label">Precio</label>
                    <input type="number" class="form-control" id="price" placeholder="Ingrese el precio" required min="0" step="0.01">
                </div>

                <div class="mb-3">
                    <label for="stock" class="form-label">Stock</label>
                    <input type="number" class="form-control" id="stock" placeholder="Ingrese el stock disponible" required min="0">
                </div>

                <button type="submit" class="btn btn-primary w-100">Guardar Producto</button>
            </form>
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="static/js/index.js"></script>
